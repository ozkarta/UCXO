						</div>
						<div id="con1" style="left:0px">
							<span id="or4" class="originalClass" style="left:1%"></span><span id=tr4 class="translatedClass"></span>
						</div>
						<div id="con1" style="left:0px">
							<span id="or5" class="originalClass" style="left:1%"></span><span id=tr5 class="translatedClass"></span>
						</div>
					</div>
		
					
				</div>
				
			</div>			
		</div>
	</body>

	<script >
	


		function callback(input){
			//alert(input.value);
			if(input.value===''){
					for(var i=1;i<=5;i++){		           	
				           	var or='or'+i;
				           	var tr='tr'+i;
				           	document.getElementById(or).innerHTML ='';
				           	document.getElementById(tr).innerHTML ='';
				           	$("#success").fadeOut();
				           }
			}else{
				   xmlhttp = new XMLHttpRequest();
				   xmlhttp.open("GET","http://localhost:2027/search?Q="+input.value, true);
				   xmlhttp.onreadystatechange=function(){
				         if (xmlhttp.readyState==4 && xmlhttp.status==200){
				           string=xmlhttp.responseText;
				           var myJson = JSON.parse(string);

				           for(var i=1;i<=myJson.length;i++){		           	
				           	var or='or'+i;
				           	var tr='tr'+i;
				           	document.getElementById(or).innerHTML =myJson[i-1].original+'  -  ';
				           	document.getElementById(tr).innerHTML =myJson[i-1].translated+'  ';
				           }
				           for(var i=myJson.length+1;i<=5;i++){
				           		var or='or'+i;
					           	var tr='tr'+i;
					           	document.getElementById(or).innerHTML ='';
					           	document.getElementById(tr).innerHTML ='';
				           }
				          $("#success").fadeIn();
				         }
				   }
				   xmlhttp.send();
			}
		  
		}
	</script>
