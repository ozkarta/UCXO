	<body onload="$('#success').fadeOut();">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-md-offset-3 center">

					<div class="form-group ">
						<input type="text" id="input" class="form-control" onkeyup="callback(this)" placeholder="ucxo sityvaTa leqsikoni" />					
					</div>
					
					<div id="success" class="alert alert-success" style="display:block;">
						<div id="con1" style="left:0px">
							<span id="or1" class="originalClass" style="left:1%"></span><span id=tr1 class="translatedClass"></span>						
						</div>						
						<div id="con1" style="left:0px">
							<span id="or2" class="originalClass" style="left:1%"></span><span id=tr2 class="translatedClass"></span>
